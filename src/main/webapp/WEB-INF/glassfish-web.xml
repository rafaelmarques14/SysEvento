<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-web-app
        PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Servlet 3.0//EN" "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">

<glassfish-web-app>
    <context-root>/SysEvento</context-root> <!-- Altere para o contexto desejado -->

    <!-- Definições de segurança -->
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <role-name>user</role-name>
    </security-role>

    <!-- Configurações de JAAS Realm, se necessário -->
    <login-config>
        <auth-method>FORM</auth-method> <!-- Ou outro método que você esteja utilizando -->
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page> <!-- Página de login -->
            <form-error-page>/error.xhtml</form-error-page> <!-- Página de erro, se necessário -->
        </form-login-config>
    </login-config>
</glassfish-web-app>
